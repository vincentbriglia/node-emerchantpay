{
    "ecmaFeatures": {
        "arrowFunctions": false
    },
    "globals": {
        "module": false,
        "define": false,
        "expect": false,
        "it": false,
        "describe": false,
        "sinon": false,
        "before": false,
        "after": false,
        "beforeEach": false,
        "afterEach": false
    },
    "env": {
        "node": true
    },
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "no-mixed-requires": 0,
        "no-use-before-define": 0
    }
}
